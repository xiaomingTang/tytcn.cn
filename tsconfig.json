{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2018",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@Src/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
